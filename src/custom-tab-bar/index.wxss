.tab-bar {
  padding-top: 23rpx;
  padding-bottom: var(--m-bottom);
  background: rgba(255, 255, 255, 0.9);
  box-shadow: inset 0px 1px 0px rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10px);
}
.tab-bar-mask {
  background: rgba(0, 0, 0, 0.01);
  backdrop-filter: none;
  box-shadow: none;
}
.tab-box {
  padding-left: 32rpx;
  padding-right: 32rpx;
  display: flex;
}
.tab-cell {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tab-icon {
  position: relative;
  width: 54rpx;
  height: 54rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
}
.red-point {
  position: absolute;
  top: 0rpx;
  right: 6rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 100%;
  background-color: #FEC44D;
  visibility: hidden;
}
.red-point.show {
  visibility: visible;
}

.tab-text {
  font-size: 22rpx;
  font-weight: 400;
  color: #999999;
}
.tab-text-active {
  color: #000000;
}
.tab-img {
  position: relative;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #003c3d;
  text-align: center;
  background-image: url('https://golf-room.oss-cn-beijing.aliyuncs.com/wx-golf-room/icons/btn_start.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
